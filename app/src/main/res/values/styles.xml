<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="batman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#261818</item>
        <item name="colorAccent">#F8F906</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:windowBackground">@color/back_batman</item>
    </style>
    <style name="superman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#144336</item>
        <item name="colorPrimaryDark">#E53935</item>
        <item name="colorAccent">#D50000</item>
        <item name="android:windowBackground">@color/back_superman</item>
    </style>
    <style name="captainamerica" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#4864d6</item>
        <item name="colorAccent">#f0f158</item>
        <item name="android:windowBackground">@color/back_captainamerica</item>
    </style>
    <style name="wonderwoman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#b98411</item>
        <item name="colorPrimaryDark">#ff092a</item>
        <item name="colorAccent">#ffdd00</item>
        <item name="android:windowBackground">@color/back_wonderwoman</item>
    </style>
    <style name="greenlantern" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#51744b</item>
        <item name="colorPrimaryDark">#187b25</item>
        <item name="colorAccent">#96b909</item>
        <item name="android:windowBackground">@color/back_greenlantern</item>
    </style>
</resources>
