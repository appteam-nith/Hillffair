<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#3c61d9</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="batman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#37474F</item>
        <item name="colorAccent">#90A4AE</item>
        <item name="android:textColor">#000</item>
        <item name="android:windowBackground">@color/back_batman</item>
    </style>

    <style name="captainamerica" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#039BE5</item>
        <item name="colorPrimaryDark">#01579B</item>
        <item name="colorAccent">#40C4FF</item>
        <item name="android:windowBackground">@color/back_captainamerica</item>
    </style>

    <style name="flash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#8D6E63</item>
        <item name="colorPrimaryDark">#3E2723</item>
        <item name="colorAccent">#BCAAA4</item>
        <item name="android:windowBackground">@color/back_flash</item>
    </style>

    <style name="superman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#B71C1C</item>
        <item name="colorAccent">#FF5252</item>
        <item name="android:windowBackground">@color/back_superman</item>
    </style>

    <style name="wonderwoman" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#EF6C00</item>
        <item name="colorPrimaryDark">#E65100</item>
        <item name="colorAccent">#FF9100</item>
        <item name="android:windowBackground">@color/back_wonderwoman</item>
    </style>

    <style name="hulk" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#43A047</item>
        <item name="colorPrimaryDark">#1B5E20</item>
        <item name="colorAccent">#00E676</item>
        <item name="android:windowBackground">@color/back_hulk</item>
    </style>

</resources>
